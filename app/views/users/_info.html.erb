
<table class='table'>
  <tr><%= image_tag user.get_profile_image %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th><%= link_to user_followings_path(user) do %>
          follows <%= user.followings.count %>
        <% end %>
    </th>
  </tr>
  <tr>
    <th><%= link_to user_followers_path(user) do %>
          followers <%= user.followers.count %>
        <% end %>
    </th>
  </tr>
</table>


<div>
  <% if user != current_user %>
  <!--< if current_user != @user %>-->
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-info" %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-sm btn-success" %>
    <% end %>
  <% end %>
</div>
<br>

<div>
  <% if user.name != "guestuser" %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>